  function ny_aktivitet($tf, $c, $tt, $de, $ty, $pl, $da) {

    $this->timefrom = $tf;
    $this->contact = $c;
    $this->timeto = $tt;
    $this->description = $de;
    $this->type = $ty;
    $this->place = $pl;
    $this->datum = $da;

    $timefrom = $this->timefrom;
    $contact = $this->contact;
    $timeto = $this->timeto;
    $description = $this->description;
